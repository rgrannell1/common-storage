{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$defs": {
    "body": {
      "contentPost": {
        "type": "object",
        "description": "add content to the topic",
        "properties": {
          "batchId": {
            "type": "string",
            "minLength": 1,
            "maxLength": 128
          },
          "content": {
            "type": "array"
          }
        },
        "required": [
          "content"
        ]
      },
      "rolePost": {
        "type": "object",
        "description": "add a role",
        "properties": {
          "permissions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "routes": {
                  "oneOf": [
                    {
                      "type": "string",
                      "const": "ALL"
                    },
                    {
                      "type": "array",
                      "items": {
                        "enum": [
                          "GET /content",
                          "POST /content",
                          "GET /topic",
                          "POST /topic",
                          "DELETE /topic"
                        ]
                      }
                    }
                  ]
                },
                "topics": {
                  "oneOf": [
                    {
                      "type": "string",
                      "const": "ALL"
                    },
                    {
                      "type": "string",
                      "const": "USER_CREATED"
                    },
                    {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 128
                      }
                    }
                  ]
                }
              },
              "required": [
                "routes",
                "topics"
              ]
            }
          }
        },
        "required": [
          "permissions"
        ]
      },
      "topicPost": {
        "type": "object",
        "description": "add a topic",
        "properties": {
          "description": {
            "type": "string"
          },
          "schema": {
            "type": "object"
          }
        },
        "required": [
          "description"
        ]
      },
      "userPost": {
        "type": "object",
        "description": "add a user",
        "properties": {
          "role": {
            "type": "string",
            "minLength": 1,
            "maxLength": 128
          },
          "password": {
            "type": "string",
            "minLength": 12,
            "maxLength": 1024
          }
        },
        "required": [
          "role",
          "password"
        ]
      },
      "feedGet": {
        "type": "object",
        "description": "retrieve topic information"
      }
    },
    "params": {
      "topicPost": {
        "type": "object",
        "properties": {
          "topic": {
            "type": "string"
          }
        },
        "required": [
          "topic"
        ]
      },
      "contentPost": {
        "type": "object",
        "properties": {
          "topic": {
            "type": "string",
            "minLength": 1,
            "maxLength": 128
          }
        },
        "required": [
          "topic"
        ]
      },
      "contentGet": {
        "type": "object",
        "properties": {
          "topic": {
            "type": "string",
            "minLength": 1,
            "maxLength": 128
          },
          "startId": {
            "type": "number",
            "minimum": 0
          }
        },
        "required": [
          "topic"
        ]
      },
      "rolePost": {
        "type": "object",
        "properties": {
          "role": {
            "type": "string",
            "minLength": 1,
            "maxLength": 128
          }
        },
        "required": [
          "role"
        ]
      },
      "topicDelete": {
        "type": "object",
        "properties": {
          "topic": {
            "type": "string",
            "minLength": 1,
            "maxLength": 128
          }
        },
        "required": [
          "topic"
        ]
      },
      "topicGet": {
        "type": "object",
        "properties": {
          "topic": {
            "type": "string",
            "minLength": 1,
            "maxLength": 128
          }
        },
        "required": [
          "topic"
        ]
      },
      "userGet": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 128
          }
        }
      },
      "roleGet": {
        "type": "object",
        "properties": {
          "role": {
            "type": "string"
          }
        }
      },
      "userPost": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 128
          }
        },
        "required": [
          "name"
        ]
      }
    }
  }
}
